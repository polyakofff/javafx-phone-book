<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <Label fx:id="titleLabel" style="-fx-font-size: 16"/>
    <HBox>
        <Label text="Имя"/>
        <TextField fx:id="nameField"/>
    </HBox>
    <HBox>
        <Label text="Фамилия"/>
        <TextField fx:id="surnameField"/>
    </HBox>
    <HBox>
        <Label text="Отчество"/>
        <TextField fx:id="patronymicField"/>
    </HBox>
    <HBox>
        <Label text="Мобильный телефон"/>
        <TextField fx:id="mobilePhoneField"/>
    </HBox>
    <HBox>
        <Label text="Домашний телефон"/>
        <TextField fx:id="homePhoneField"/>
    </HBox>
    <HBox>
        <Label text="Адрес"/>
        <TextField fx:id="addressField"/>
    </HBox>
    <HBox>
        <Label text="День рождения"/>
        <DatePicker fx:id="birthdayField"/>
    </HBox>
    <HBox>
        <Label text="Комментарий"/>
        <TextArea fx:id="notesField"/>
    </HBox>
    <HBox>
        <Button text="Сохранить" onAction="#save"/>
        <Button text="Отмена" onAction="#cancel"/>
    </HBox>

</VBox>
